<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.mita.cleanarchitechturemovieapp.presentation.MovieListFragment"
        android:label="MovieListFragment"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_movieListFragment_to_reelsFragment"
            app:destination="@id/reelsFragment" />

        <action
            android:id="@+id/action_movieListFragment_to_videoLoadFragment"
            app:destination="@id/videoLoadFragment" />
    </fragment>

    <fragment
        android:id="@+id/reelsFragment"
        android:name="com.mita.cleanarchitechturemovieapp.presentation.ReelsFragment"
        android:label="ReelsFragment"
        tools:layout="@layout/fragment_reels"/>

    <fragment
        android:id="@+id/videoLoadFragment"
        android:name="com.mita.cleanarchitechturemovieapp.presentation.video.VideoLoadFragment"
        android:label="VideoLoadFragment"
        tools:layout="@layout/fragment_video_load">
        <action
            android:id="@+id/action_videoLoadFragment_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment" />
    </fragment>

    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="com.mita.cleanarchitechturemovieapp.presentation.video.VideoPlayerFragment"
        android:label="VideoPlayerFragment"
        tools:layout="@layout/fragment_video_player"/>


</navigation>